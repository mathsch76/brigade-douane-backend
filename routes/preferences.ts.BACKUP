// Route pour rÃ©cupÃ©rer les prÃ©fÃ©rences utilisateur
router.get('/preferences', legacyAuthGuard, async (req: any, res) => {
  try {
    const userEmail = req.user?.email;
    const userId = req.user?.id;

    console.log('ğŸ“– RÃ©cupÃ©ration prÃ©fÃ©rences pour:', userEmail);

    // Utilisateur test
    if (userEmail === 'test@naoandco.com') {
      return res.json({
        theme: 'system',
        communication_style: 'casual',
        content_orientation: 'intermediate'
      });
    }

    // RÃ©cupÃ©ration depuis Supabase
    try {
      const response = await fetch(`${config.supabaseUrl}/rest/v1/user_preferences?user_id=eq.${userId}`, {
        headers: {
          'apikey': config.supabaseKey,
          'Authorization': `Bearer ${config.supabaseKey}`,
          'Content-Type': 'application/json'
        }
      });

      if (response.ok) {
        const data = await response.json();
        if (data && data.length > 0) {
          console.log('âœ… PrÃ©fÃ©rences trouvÃ©es:', data[0]);
          return res.json(data[0]);
        }
      }
    } catch (error) {
      console.error('âŒ Erreur Supabase:', error);
    }

    // PrÃ©fÃ©rences par dÃ©faut
    const defaultPrefs = {
      theme: 'system',
      communication_style: 'casual',
      content_orientation: 'intermediate'
    };

    res.json(defaultPrefs);
  } catch (error) {
    console.error('âŒ Error in GET /preferences:', error);
    res.status(500).json({ error: 'Internal server error' });
  }
});

